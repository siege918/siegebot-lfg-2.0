{
  "name": "siegebot-lfg",
  "version": "2.0.0",
  "description": "A bot plugin to organize gaming groups and handle scheduling and notification.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "nyc ava",
    "test:no-coverage": "ava",
    "open-coverage-report": "npx open ./coverage/index.html",
    "prebuild": "npx rimraf dist",
    "build": "tsc",
    "prettier": "prettier --write --only-changed",
    "linter": "tslint --fix --project ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siege918/siegebot-lfg-2.0.git"
  },
  "author": "Collin Johnson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siege918/siegebot-lfg-2.0/issues"
  },
  "homepage": "https://github.com/siege918/siegebot-lfg-2.0#readme",
  "dependencies": {
    "@types/hashids": "~1.0.30",
    "@types/node": "~12.7.5",
    "@types/node-cron": "~2.0.2",
    "@types/shortid": "0.0.29",
    "aws-sdk": "~2.529.0",
    "discord.js": "~11.5.1",
    "dotenv": "~8.1.0",
    "lodash": "^4.17.21",
    "moment": "~2.24.0",
    "node-cron": "~2.0.3",
    "shortid": "~2.2.15",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/uuid": "^7.0.2",
    "ava": "~2.4.0",
    "husky": "~3.0.5",
    "lint-staged": "~9.2.5",
    "nyc": "~14.1.1",
    "prettier": "^2.0.2",
    "source-map-support": "~0.5.13",
    "ts-node": "^8.8.0",
    "tslint": "~5.20.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "^3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "lib/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
